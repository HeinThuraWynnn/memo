    <com.oakkub.android.PinEditText

            android:layout_width="22dp"
            android:layout_height="41dp"
            android:maxLength="4"
            android:inputType="textNoSuggestions"
            app:pinHighlightStateDrawable="@drawable/pin_blue_rect_highlight_state"
            app:pinNormalStateDrawable="@drawable/your_pin_normal_state"
            app:pinSpace="16dp"
            app:pinHeight="24dp"
            app:pinWidth="24dp"
            android:id="@+id/pinCode" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/txtCfmPC" android:layout_marginBottom="40dp"/>
    <TextView
            android:text="Set Passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtSetPC"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/pinCode" app:layout_constraintVertical_bias="0.0"/>

