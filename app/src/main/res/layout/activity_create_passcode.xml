    <com.oakkub.android.PinEditText

            android:layout_width="22dp"
            android:layout_height="41dp"
            app:password_count="4"
            android:inputType="textNoSuggestions"
            app:pinHighlightStateDrawable="@drawable/pin_blue_rect_highlight_state"
            app:pinNormalStateDrawable="@drawable/your_pin_normal_state"
            app:pinSpace="16dp"
            app:pinHeight="24dp"
            app:pinWidth="24dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.513"
            android:id="@+id/pinCfm" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSave"/>
    <TextView
            android:text="Confirm Passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/txtCfmPC"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/pinCfm" android:layout_marginBottom="32dp"/>
    <Button
            android:onClick="btnSave"
            android:text="Save Passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="316dp"
