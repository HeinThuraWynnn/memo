<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">
    <com.oakkub.android.PinEditText
            android:layout_width="22dp"
            android:layout_height="41dp"
            android:maxLength="4"
            android:inputType="textNoSuggestions"
            app:pinHighlightStateDrawable="@drawable/pin_blue_rect_highlight_state"
            app:pinNormalStateDrawable="@drawable/your_pin_normal_state"
            app:pinSpace="16dp"
            app:pinHeight="24dp"
            app:pinWidth="24dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:id="@+id/passcode"
            android:layout_marginBottom="176dp" app:layout_constraintBottom_toTopOf="@+id/btnlogin"
            app:layout_constraintHorizontal_bias="0.513"/>
    <Button
            android:onClick="btnLogin"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnlogin" android:layout_marginBottom="148dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Enter Passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtEPC" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/passcode"/>
</androidx.constraintlayout.widget.ConstraintLayout>